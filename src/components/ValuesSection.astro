      </p>
    </div>

    <!-- Grid Responsive -->
    <div class="flex flex-wrap justify-center gap-4">
      {values.map((value) => (
        <div class="text-center w-[45%] md:w-[30%] space-y-6 flex flex-col items-center">
          <div class="inline-flex items-center justify-center w-20 h-20 bg-yellow-300 text-black rounded-full text-2xl font-bold">
            {value.number}
          </div>
          <h3 class="text-xl md:text-2xl font-bold text-white">{value.title}</h3>
          <p class="text-yellow-300 leading-relaxed text-base md:text-lg">{value.description}</p>
